#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# 型チェック
echo "📝 Running typecheck..."
pnpm run typecheck

# 全ファイルのLintチェック
echo "🧹 Running lint..."
pnpm run lint

# ビルドテスト
echo "🏗️ Running build test..."
pnpm run build

echo "✅ All pre-push checks passed! Safe to push."